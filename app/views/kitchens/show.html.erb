

<div class="container py-3">
  <h1><%= @kitchen.title %></h1>
  <p class="card-text">
    <%= @kitchen.description %>
    <br>
    <%= @kitchen.address %> | <%= @kitchen.size %>
  </p>
  <hr>
  <h4>Rent <%= @kitchen.title %></h4>
  <%= simple_form_for [ @kitchen, @booking] do |f| %>
    <%= f.input :start_date, html5: true %>
    <%= f.input :end_date, html5: true %>
    <%= f.submit "Rent" %>
  <% end %>
  <hr>
  <%#= link_to "Back", user_path, class: "btn btn-warning" %>
</div>

